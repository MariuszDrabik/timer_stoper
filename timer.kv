<Timer>:
    padding: 10
    cols: 1
    TextInput:
        id: text_input
        size_hint: 1, 0.25
        text: 'Podaj czas w sekundach'
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        id: 1
        font_name: "fonts/Lcd.ttf"
        font_size: "80dp"
        color: 1, .5, 1, 1
        text: root.clock_label
    ProgressBar:
        color: 1, .5, 1, 1
        max: root.max_slider
        value: int(root.slider)
    Button:
        id: button_id
        text: root.button_text
        on_press: root.start_counting()
        disabled: not root.button_enable
